// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @default(autoincrement()) @id
  uuid String @unique
  name String? @default("")
  userName String? @unique
  email String @unique
  password String
  techniques Technique[]
  sequences Sequence[]
  @@map(name: "users")
}

model Technique {
  id Int @id @default(autoincrement())
  uuid String @unique
  createdAt DateTime @default(now())
  udpatedAt DateTime @updatedAt
  name String
  slug String @unique
  description String? @default("")
  creator User @relation(fields: [ creatorId ], references: [ uuid ])
  creatorId String
  techniquesOnSequences TechniquesOnSequences[]
  @@map(name: "techniques")
}

model Sequence {
  id Int @id @default(autoincrement())
  uuid String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  slug String
  description String? @default("")
  creator User @relation(fields: [ creatorId ], references: [ uuid ])
  creatorId String
  techniqueOrder Json
  techniquesOnSequences TechniquesOnSequences[]
  @@map(name: "sequences")
}

model TechniquesOnSequences {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sequence Sequence @relation(fields: [ sequenceId ], references: [ id ])
  sequenceId Int
  technique Technique @relation(fields: [ techniqueId ], references: [ id ])
  techniqueId Int
  @@id([ sequenceId, techniqueId ])
  @@map(name: "techniques_on_sequences")
}