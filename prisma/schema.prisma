generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  uuid       String      @unique
  name       String?     @default("")
  userName   String?     @unique
  email      String      @unique
  password   String
  sequences  Sequence[]
  techniques Technique[]

  @@map("users")
}

model Technique {
  id                    Int                     @id @default(autoincrement())
  createdAt             DateTime                @default(now())
  udpatedAt             DateTime                @updatedAt
  uuid                  String                  @unique
  name                  String
  slug                  String                  @unique
  description           String?                 @default("")
  creatorId             String
  creator               User                    @relation(fields: [creatorId], references: [uuid])
  techniquesOnSequences TechniquesOnSequences[]

  @@index([creatorId], name: "creatorId")
  @@map("techniques")
}

model Sequence {
  id                    Int                     @id @default(autoincrement())
  uuid                  String                  @unique
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  name                  String
  description           String?                 @default("")
  creatorId             String
  techniqueOrder        Json
  slug                  String
  creator               User                    @relation(fields: [creatorId], references: [uuid])
  techniquesOnSequences TechniquesOnSequences[]

  @@index([creatorId], name: "creatorId")
  @@map("sequences")
}

model TechniquesOnSequences {
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sequenceId  Int
  techniqueId Int
  sequence    Sequence  @relation(fields: [sequenceId], references: [id])
  technique   Technique @relation(fields: [techniqueId], references: [id])

  @@id([sequenceId, techniqueId])
  @@index([techniqueId], name: "techniqueId")
  @@map("techniques_on_sequences")
}
